<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelloDroidActivity">
    <ImageView
            android:layout_width="190dp"
            android:layout_height="196dp" app:srcCompat="@drawable/logo" android:id="@+id/visionedLogo"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/clickCounter" android:layout_marginEnd="111dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp" android:contentDescription="@string/visioned_logo"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"/>
    <TextView
            android:text="@string/settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clickCounter"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/visionedLogo" android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="473dp" android:padding="10dp" android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>
</androidx.constraintlayout.widget.ConstraintLayout>